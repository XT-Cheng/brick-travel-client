{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "paths": {
    "@core": [
      "./src/app/core"
    ],
    "@core/*": [
      "./src/app/core/*"
    ],
    "@store": [
      "./src/app/store"
    ],
    "@store/*": [
      "./src/app/store/*"
    ]
  }
}
