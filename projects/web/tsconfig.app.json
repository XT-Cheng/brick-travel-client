{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../out-tsc/app",
    "module": "es2015",
    "types": [
      "node"
    ],
    "paths": {
      "@core": [
        "./src/app/core"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@shared": [
        "./src/app/shared"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@layouts": [
        "./src/app/layouts"
      ],
      "@layouts/*": [
        "./src/app/layouts/*"
      ],
      "@routes": [
        "./src/app/routes"
      ],
      "@routes/*": [
        "./src/app/routes/*"
      ],
      "@env": [
        "./src/environments"
      ],
      "@env/*": [
        "./src/environments/*"
      ],
      "@testing": [
        "./src/testing"
      ],
      "@testing/*": [
        "./src/testing/*"
      ],
      "@utilities": [
        "../../dist/utilities"
      ],
      "@utilities/*": [
        "../../dist/utilities/*"
      ],
      "@store": [
        "../../dist/store"
      ],
      "@store/*": [
        "../../dist/store/*"
      ],
      "@dynamic-component": [
        "../../dist/dynamic-component"
      ],
      "@dynamic-component/*": [
        "../../dist/dynamic-component/*"
      ]
    }
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
